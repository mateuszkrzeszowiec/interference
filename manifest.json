{
  "manifest_version": 2,
  "name": "Interference",
  "version": "0.1",
  "description": "Tool that (will) help you with capturing and modifying requests on the fly.",
  "permissions": [
    "background",
    "webRequest",
    "activeTab",
    "contextMenus",
    "tabs",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Interference configuration",
    "default_popup": "browser_action.html"
  },
  "options_ui": {
    "page": "options/options.html"
  }
}